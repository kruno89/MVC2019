@model Validacije.Models.MetaRacun
@{
    ViewBag.Title = "ClientMetaIzdavanjeRacuna";
    Html.EnableClientValidation(true);
    Html.EnableUnobtrusiveJavaScript(true);
}

<style>
    label {
        display: inline-block;
        width: 150px;
        margin: 5px;
        font-weight: bold;
    }
</style>

<h2>Izdavanje računa (klijentska validacija)</h2>

@using (Html.BeginForm("MetaIzdavanjeRacuna", "Validacije"))
{
    @Html.ValidationSummary(true)
    <p>
        @Html.EditorFor(x => x.CustomVal)
        @Html.ValidationMessageFor(x => x.CustomVal)
    </p>

    <div>
        <label>Broj računa:</label>
        @Html.EditorFor(x => x.BrojRacuna)
        @Html.ValidationMessageFor(x => x.BrojRacuna)
    </div>

    <div>
        <label>Datum:</label>
        @Html.EditorFor(x => x.Datum)
        @Html.ValidationMessageFor(x => x.Datum)
    </div>

    <div>
        <label>Zaposlenik:</label>
        @Html.EditorFor(x => x.Zaposlenik)
        @Html.ValidationMessageFor(x => x.Zaposlenik)
    </div>

    <div>
        <label>Kupac:</label>
        @Html.EditorFor(x => x.Kupac)
        @Html.ValidationMessageFor(x => x.Kupac)
    </div>

    <div>
        <label>Cijena:</label>
        @Html.EditorFor(x => x.Cijena)
        @Html.ValidationMessageFor(x => x.Cijena)
    </div>

    <input type="submit" value="Pošalji" />

    <input type="hidden" name="id" value="ClientMetaIzdavanjeRacuna" />
}